<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyTodoApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
    </style>

    <!-- 1. 定义菜单项的文本外观，强制颜色为紫色 -->
    <style name="TextAppearance.App.PopupMenu.Item" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <!-- 2. 定义PopupMenu的样式，并应用上面的文本外观 -->
    <style name="Widget.App.PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:itemTextAppearance">@style/TextAppearance.App.PopupMenu.Item</item>
    </style>

    <!-- 3. 在主主题中应用我们自定义的PopupMenu样式 -->
    <style name="Theme.MyTodoApp" parent="Base.Theme.MyTodoApp">
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="android:popupMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.App.ToolbarTitle</item>
    </style>

    <style name="TextAppearance.App.ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
